<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Display Balance -->
    <TextView
        android:id="@+id/tv_balance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Balance:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="4dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3500 lv"
        android:textSize="32sp"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- Add Money Button -->
        <Button
            android:id="@+id/btn_add_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Money"
            android:layout_weight="1"
            android:padding="8dp" />

        <!-- Give Money Button -->
        <Button
            android:id="@+id/btn_give_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Give Money"
            android:layout_weight="1"
            android:padding="8dp"
            android:layout_marginStart="8dp" />

        <!-- Save Money Button -->
        <Button
            android:id="@+id/btn_save_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Money"
            android:layout_weight="1"
            android:padding="8dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Transaction List Label -->
    <TextView
        android:id="@+id/tv_transactions_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Transactions"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:textColor="#000000" />

    <!-- Transaction List -->
    <ListView
        android:id="@+id/lv_transactions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />


</LinearLayout>
